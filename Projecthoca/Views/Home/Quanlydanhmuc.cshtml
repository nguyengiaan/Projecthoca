        @section Scripts {
            <script>
                $(document).ready(function () {
                    loadDanhmucFromLocalStorage();
                    $(document).on('click', '#submitBtndm', function () {
                        Themdanhmuc();
                    });
                    danhsachdanhmuc(1, 10);
                    $('#Themdanhmuc').on('hidden.bs.modal', function () {
                        resetForm();
                        $('#updateBtndm').attr('id', 'submitBtndm').text('Thêm danh mục');

                    });
                    $(document).on('click', '#updateBtndm', function () {
                        Capnhatdanhmuc();
                    });
                    $(document).on('click', '#btndvt', function () {
                        event.preventDefault();
                        $('#Themdanhmuc').modal('hide');
                        $('#Themdonvitinh').modal('show');
                    });
                    $(document).on('click', '#submitBtndvt', function () {
                        Themdonvitinh();
                    });
                    $(document).on('keydown', function (event) {
    // Kiểm tra nếu phím Enter được nhấn (keyCode 13)
                    if (event.key === "Enter") {
                        event.preventDefault(); // Ngăn chặn hành động mặc định của phím Enter
                        Themdonvitinh(); // Gọi hàm Themmathang()
                    }
                    });
                    Laydvt();
                   
        
                    $(document).on('click', '#btnmathang', function () {
                        event.preventDefault();
                        $('#Themdanhmuc').modal('hide');
                        $('#Themmathang').modal('show');
                    });
                    $(document).on('click', '#submitBtnmh', function () {
                        event.preventDefault();
                        Themmathang();
                    });
                    $(document).on('keydown', function (event) {
                        // Kiểm tra nếu phím Enter được nhấn (keyCode 13)
                        if (event.key === "Enter") {
                            event.preventDefault(); // Ngăn chặn hành động mặc định của phím Enter
                            Themmathang(); // Gọi hàm Themmathang()
                        }
                    });
                    
                    Laymathang();
                     $(document).on('click', '#btncc', function () {
                        event.preventDefault();
                        $('#Themdanhmuc').modal('hide');
                        $('#Themnhacungcap').modal('show');
                    });
                    $(document).on('click', '#submitBtncc', function () {
                        event.preventDefault();
                        Themnhacungcap();
                    });
                    $(document).on('keydown', function (event) {
                        // Kiểm tra nếu phím Enter được nhấn (keyCode 13)
                        if (event.key === "Enter") {
                            event.preventDefault(); // Ngăn chặn hành động mặc định của phím Enter
                            Themnhacungcap(); // Gọi hàm Themmathang()
                        }
                    });
                    Laynhacungcap();
                     
                });


// Load danh mục from localStorage on page load
            function loadDanhmucFromLocalStorage() {
                var danhmucList = localStorage.getItem('danhmucList');
                if (danhmucList) {
                    danhmucList = JSON.parse(danhmucList);
                    $('#tblbody').empty();
                    $.each(danhmucList, function (index, value) {
                        var str = `<tr>
                            <td>${value.ma_danhmuc}</td>
                            <td>${value.ten_danhmuc}</td>
                            <td>${formatCurrency(value.gianhap)}</td>
                            <td>${formatCurrency(value.gia)}</td>
                            <td>${value.ma_mathang}</td>
                            <td>${value.nhacungcap}</td>
                            <td>${value.donvitinh}</td>
                            <td>${value.soluong}</td>
                            <td><button class="btn btn-danger" data-id='${value.ma_danhmuc}' onclick="Xoadanhmuc('${value.ma_danhmuc}')">Xóa</button></td>
                            <td><button class="btn btn-warning" data-id='${value.ma_danhmuc}' onclick="LaydmID('${value.ma_danhmuc}')" >Sửa</button></td>
                        </tr>`;
                        $('#tblbody').append(str);
                    });
                }
            }



                function Themnhacungcap(){
                    var form = $("#formnhacungcap")[0];
                    var data = new FormData(form);
                     data.append("Nhacungcap", $("#Ten_nhacungcap").val());
                    $.ajax({
                        type: "POST",
                        url: "/Danhmuc/Themnhacungcap",
                        data: data,
                        processData: false,
                        contentType: false,
                        beforeSend: function () {
                            Swal.fire({
                                title: "Loading...",
                                text: "Please wait",
                                imageUrl: "https://media3.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif",
                                imageWidth: 100,
                                imageHeight: 100,
                                imageAlt: "Loading",
                            });
                        },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: "Thành công",
                                    text: response.message,
                                    icon: "success"
                                });
                                $("#Themnhacungcap").modal("hide");
                                form.reset();
                               Laynhacungcap();
                            }
                            else {
                                Swal.fire({
                                    title: "Thông báo lỗi",
                                    text: response.message,
                                    icon: "error"
                                });
                            }
                        }
                    });
                }
                function Laynhacungcap() {
                    $.ajax({
                        type: "GET",
                        url: "/Danhmuc/Danhsachnhacungcap",
                        success: function (response) {
                            $('#Nhacungcap').empty();
                            if (response.success) {
                                $.each(response.data, function (index, value) {
                                    var str = `<option value="${value.nhacungcap}">${value.nhacungcap}</option>`;
                                    $('#Nhacungcap').append(str);
                                });
                            }
                            else {
                                Swal.fire({
                                    title: "Thông báo lỗi",
                                    text: response.message,
                                    icon: "error"
                                });
                            }
                        }
                    });
                }

                function Themdanhmuc() {
                    var form = $("#formThemdanhmuc")[0];
                    var data = new FormData(form);
                    $.ajax({
                        type: "POST",
                        url: "/Danhmuc/Themdanhmuc",
                        data: data,
                        processData: false,
                        contentType: false,
                        beforeSend: function () {
                            Swal.fire({
                                title: "Loading...",
                                text: "Please wait",
                                imageUrl: "https://media3.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif",
                                imageWidth: 100,
                                imageHeight: 100,
                                imageAlt: "Loading",
                            });
                        },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: "Thành công",
                                    text: response.message,
                                    icon: "success"
                                });
                                $("#Themdanhmuc").modal("hide");
                                form.reset();
                                danhsachdanhmuc(1, 10);
                            }
                            else {
                                Swal.fire({
                                    title: "Thông báo lỗi",
                                    text: response.message,
                                    icon: "error"
                                });
                            }
                        }
                    });
                }
                function danhsachdanhmuc(page, pagesize) {
                    $.ajax({
                        type: "POST",
                        url: "/Danhmuc/Danhsachdanhmuc",
                        data: { page: page, pagesize: pagesize }, // Thêm dữ liệu này nếu cần
                        success: function (response) {
                            $('#tblbody').empty();
                            console.log(response.dsdm);
                            if (response.success) {
                                localStorage.setItem('danhmucList', JSON.stringify(response.dsdm));
                                $.each(response.dsdm, function (index, value) {
                                    var str = `<tr>
                                                                                                    <td>${value.ma_danhmuc}</td>
                                                                                                            <td>${value.ten_danhmuc}</td>
                                                                                                            <td>${formatCurrency(value.gianhap)}</td>
                                                                                                             <td>${formatCurrency(value.gia)}</td>
                                                                                                        <td>${value.ma_mathang}</td>
                                                                                                        <td>${value.nhacungcap}</td>
                                                                                                            <td>${value.donvitinh}</td>
                                                                                                            <td>${value.soluong}</td>
                                                                                                            <td><button class="btn btn-danger" data-id='${value.ma_danhmuc}' onclick="Xoadanhmuc('${value.ma_danhmuc}')">Xóa</button></td>
                                                                                                             <td><button class="btn btn-warning" data-id='${value.ma_danhmuc}' onclick="LaydmID('${value.ma_danhmuc}')" >Sửa</button></td>
                                                                                        </tr>`;
                                    $('#tblbody').append(str);
                                    updatePagination(response.totalPages, response.pageindex)
                                });
                            } else {
                                Swal.fire({
                                    title: "Thông báo lỗi",
                                    text: response.message,
                                    icon: "error"
                                });
                            }
                        }
                    });
                }
               
               
                function updatePagination(totalPages, currentPage) {

                    if (totalPages > 0) {
                        var str = `<nav aria-label="Page navigation example">
                                                                                            <ul class="pagination">`;
                        if (totalPages > 1) {
                            if (currentPage > 1) {
                                str += `<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="danhsachdanhmuc(${currentPage - 1}, 10)">Previous</a></li>`;
                            }
                            for (let i = 1; i <= totalPages; i++) {
                                if (currentPage === i) {
                                    str += `<li class="page-item active"><a class="page-link" href="javascript:void(0)">${i}</a></li>`;
                                } else {
                                    str += `<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="danhsachdanhmuc(${i}, 10)">${i}</a></li>`;
                                }
                            }
                            if (currentPage < totalPages) {
                                str += `<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="danhsachdanhmuc(${currentPage + 1}, 10)">Next</a></li>`;
                            }
                        }
                        str += `</ul></nav>`;
                        $('#pagination').html(str);
                    }
                }
                function formatCurrency(value) {
                    return value.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                }
                function Xoadanhmuc(Ma_danhmuc) {
                    $.ajax({
                        type: "POST",
                        url: "/Danhmuc/Xoadanhmuc",
                        data: { Ma_danhmuc: Ma_danhmuc },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: "Thành công",
                                    text: response.message,
                                    icon: "success"
                                });
                                danhsachdanhmuc(1, 10);
                            }
                            else {
                                Swal.fire({
                                    title: "Thông báo lỗi",
                                    text: response.message,
                                    icon: "error"
                                });
                            }
                        }
                    });
                }
                function LaydmID(Ma_danhmuc) {
                    $('#Themdanhmuc').modal('show');
                    $.ajax({
                        type: "POST",
                        url: "/Danhmuc/Laytheoma",
                        data: { Ma_danhmuc: Ma_danhmuc },

                        success: function (response) {
                            console.log(response)
                            if (response.success) {
                                $('#Ma_danhmuc').val(response.data.ma_danhmuc);
                                $('#Ten_danhmuc').val(response.data.ten_danhmuc);
                                $('#Gia').val(response.data.gia);
                                $('#Gianhap').val(response.data.gianhap);
                                $('#Nhacungcap').val(response.data.nhacungcap);
                                $('#Donvitinh').val(response.data.donvitinh);
                                $('#soluong').val(response.data.soluong);
                                $('#submitBtndm').attr('id', 'updateBtndm').text('Cập nhật');
                            }
                            else {
                                Swal.fire({
                                    title: "Thông báo lỗi",
                                    text: response.message,
                                    icon: "error"
                                });
                            }
                        }
                    });
                }
                function resetForm() {
                    var form = $("#formThemdanhmuc")[0];
                    form.reset();

                }

function validateForm() {
    var isValid = true;
    var errorMessage = "";

    // Kiểm tra Tên danh mục
    if ($("#Ten_danhmuc").val().trim() === "") {
        errorMessage += "Vui lòng nhập Tên danh mục.\n";
        isValid = false;
    }

    // Kiểm tra Nhà cung cấp
    if ($("#Nhacungcap").val() === null) {
        errorMessage += "Vui lòng chọn Nhà cung cấp.\n";
        isValid = false;
    }

    // Kiểm tra Giá nhập
    if ($("#Gianhap").val().trim() === "") {
        errorMessage += "Vui lòng nhập Giá nhập.\n";
        isValid = false;
    }

    // Kiểm tra Giá bán
    if ($("#Gia").val().trim() === "") {
