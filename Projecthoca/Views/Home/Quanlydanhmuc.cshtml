﻿@{
    Layout = "_Layout";
}
@model Projecthoca.Models.EnitityVM.DanhmucVM
<style>
  /* CSS cho bảng */
/* Container cho các form group */
.form-container {
    display: flex;
    flex-wrap: wrap;
    gap: 15px; /* Khoảng cách giữa các ô */
    max-width: 100%; /* Đảm bảo container không vượt quá chiều rộng của modal */
}

/* Phần bên trái với 4 ô input */
.form-left {
    flex: 1;
    max-width: 48%; /* Chiếm 48% chiều rộng của container */
}

/* Phần bên phải với 3 ô input */
.form-right {
    flex: 1;
    max-width: 48%; /* Chiếm 48% chiều rộng của container */
}

/* Đảm bảo các ô input đều có chiều rộng tối đa */
.form-group {
    margin-bottom: 15px;
}

.table {
    width: 100%;
    margin-bottom: 1rem;
    color: #212529;
    border-collapse: collapse;
}

.table-bordered {
    border: 1px solid #dee2e6;
}

.table-bordered th,
.table-bordered td {
    border: 1px solid #dee2e6;
    padding: 0.75rem;
    vertical-align: top;
    text-align: center;
}

.table thead th {
    background-color: #f8f9fa;
    color: #495057;
    font-weight: bold;
}

.table tfoot {
    background-color: #f1f3f5;
}

.table tbody tr:hover {
    background-color: #f8f9fa;
}

/* CSS cho nút Xóa và Sửa */
.table .btn {
    font-size: 0.875rem;
    padding: 0.375rem 0.75rem;
    color: #fff;
    background-color: #007bff;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
}

.table .btn-danger {
    background-color: #dc3545;
}

.table .btn-warning {
    background-color: #ffc107;
}

.table .btn:hover {
    opacity: 0.9;
}

/* CSS cho phân trang */
.pagination {
    display: inline-flex;
    padding-left: 0;
    list-style: none;
    border-radius: 0.25rem;
}

.pagination li {
    display: inline;
    margin-right: 0.25rem;
}

.pagination a {
    color: #007bff;
    text-decoration: none;
    background-color: #fff;
    border: 1px solid #dee2e6;
    padding: 0.5rem 0.75rem;
    margin-left: -1px;
    position: relative;
    display: block;
}

.pagination a:hover {
    color: #0056b3;
    background-color: #e9ecef;
    border-color: #dee2e6;
}

.pagination .active a {
    color: #fff;
    background-color: #007bff;
    border-color: #007bff;
}

</style>
